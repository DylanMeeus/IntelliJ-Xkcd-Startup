<idea-plugin>
    <id>net.itca.xkcdotd</id>
    <name>xkcdotd</name>
    <vendor email="meeusdylan@protonmail.com" url="https://www.github.com/DylanMeeus">Dylan Meeus</vendor>

    <description><![CDATA[
        This plugin will show a random XKCD comic each time a project starts in IntelliJ.
        (A project is also started when IntelliJ is launched).
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

   <project-components>
       <component>
           <implementation-class>xkcdotd.Launcher</implementation-class>
       </component>
   </project-components>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>